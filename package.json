{
  "name": "xec-consumer",
  "version": "1.0.0",
  "description": "A npm JS library for interacting with ipfs-bch-wallet-consumer REST API",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "npm run lint && TEST=unit nyc mocha test/unit/",
    "test:integration": "mocha --timeout 25000 test/integration/",
    "lint": "standard --env mocha --fix",
    "docs": "./node_modules/.bin/apidoc -i lib/ -o docs",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coverage:report": "nyc --reporter=html mocha test/unit/ --exit"
  },
  "keywords": [
    "bitcoin",
    "bitcoin cash",
    "wallet",
    "javascript",
    "cryptocurrency",
    "client",
    "apidoc",
    "slp",
    "tokens"
  ],
  "author": "Chris Troutner <chris.troutner@gmail.com>",
  "license": "MIT",
  "apidoc": {
    "title": "xec-consumer",
    "url": "xec-consumer."
  },
  "repository": "Permissionless-Software-Foundation/xec-consumer",
  "dependencies": {
    "@psf/bch-js": "6.5.3",
    "apidoc": "0.51.0",
    "axios": "0.25.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "coveralls": "3.1.0",
    "eslint": "7.17.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-standard": "4.0.0",
    "husky": "4.3.8",
    "lodash.clonedeep": "4.5.0",
    "mocha": "9.2.2",
    "nyc": "15.1.0",
    "semantic-release": "19.0.2",
    "sinon": "9.2.2",
    "standard": "16.0.4"
  },
  "release": {
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": true
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
